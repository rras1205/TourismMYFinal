<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"> <!-- Fixes the top bar overlap -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business Portal"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload New Service"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/etServiceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Service Name (e.g. City Bus Tour)"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/etServiceDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:layout_marginTop="10dp"
        android:minHeight="48dp"/>

    <EditText
        android:id="@+id/etServicePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Price (RM)"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        android:minHeight="48dp"/>

    <!-- NEW FIELD: TIMING -->
    <EditText
        android:id="@+id/etServiceTiming"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Timing (e.g. 9:00 AM - 5:00 PM)"
        android:layout_marginTop="10dp"
        android:minHeight="48dp"/>

    <Button
        android:id="@+id/btnUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Publish Listing"
        android:layout_marginTop="24dp"
        android:backgroundTint="#FF9800"/>

    <Button
        android:id="@+id/btnViewBookings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Incoming Bookings"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnManageListings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage My Listings"/>

    <Button
        android:id="@+id/btnLogoutBusiness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:layout_marginTop="10dp"
        android:backgroundTint="#757575"/>

</LinearLayout>